{% filter spaceless %}
  <li class="dropdown{% if isActive|default(false) %} active{% endif %}">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-submenu role="button" aria-haspopup="false" aria-expanded="false">
      {{ label }}
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      {% for menuItem in items %}
        {% set menuItem = menuItem|merge({ 'index': loop.index0 }) %}
        {% include '@BootstrapMenu/menuItem.html.twig' with menuItem only %}
      {% endfor %}
    </ul>
  </li>
{% endfilter %}
